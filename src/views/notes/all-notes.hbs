{{#if allNotes}}
<h1>All notes</h1>
{{else}}
    <div class="container">
        <div class="container">
            <h1>No hay notas, crea una nota nueva..</h1>
            <a href="/notes/add" class="btn btn-light btn-lg">Crear una nota</a>
        </div>
    </div>
{{/if}}

<div class="row">
    {{#each allNotes}}
    <div class="col-md-3">
        <div class="card">
            
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between algin-items-center">
                    {{titulo}} <a href="/notes/edit/{{id}}"><i class="fas fa-pencil-alt"></i></a>
                </h4>
                <p>{{descripcion}}</p>
                <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm">Delete</button>
                </form>
            </div>
            
        </div>
    </div>
    
    {{/each}}
</div>